
{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "English-tracker API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/users/register": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Регистрация нового пользователя",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Параметры нового пользователя",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Создан новый пользователь",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "email": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Проблемы с регистрацией нового пользователя",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Вход пользователя",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Параметры пользователя, который логинится",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Успешный вход пользователя",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "email": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Пользователь не найден/ Пароль неверный",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "422": {
            "description": "Некорректные данные",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string",
          "uniqueItems": true
        }
      }
    }
  }
}